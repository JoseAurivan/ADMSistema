@model List<User>

@{
    ViewBag.Title = "Listar";
    Layout = "_Layout";
}

<div class="table-responsive-sm">
    <table class="table table-dark table-hover table-bordered table-sm">
        <thead>
        <tr>
            <th>ID:</th>
            <th>CPF:</th>
            <th>NOME:</th>
            <th>EMAIL:</th>
            <th>SENHA:</th>
            <th>CARGO:</th>
        </tr>
        </thead>
        <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Username</td>
                <td>@item.Nome</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td>@if (item.Roles is not null)
                    {
                        @item.Roles;
                    }</td>
                <td><a asp-action="Delete" asp-route-id="@item.Id">Deletar</a></td>
                <td><a asp-action="Editar" asp-route-id="@item.Id">Editar</a></td>
            </tr>
        }

        </tbody>
    </table>
</div>