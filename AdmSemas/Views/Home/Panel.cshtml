@model dynamic

@{
    ViewBag.Title = "Painel do Administrador";
    Layout = "_Layout";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        body{
         background-color: #E8EEF1;
        }
        .flex-container{
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            align-content:space-around;
        }
        .flex-container > div{
            margin: 10px;
            color: #E8EEF1;
        }
        .card-header{
            background-color:#006e80;
        }
        .card{
         background-color: #51a8b1;   
        }
        #fazenda-header{
            background-color: #1e7e34;
        }
        #fazenda-body{
            background-color: #28b61f;
        }
        #dois-header {
            background-color: #e0a800;
        }
        #dois-body {
            background-color: #e6c60d;
        }
    </style>
</head>

<div class="flex-container">
    
    <div class="card" style="width: 18rem;">
        <div class="card-header" id="dois-header">
            Cadastro de Usuarios
        </div>
        <div class="card-body" id="dois-body">
            <p class="card-text">Crie um usuário para o sistema da SEMAS.</p>
            <a class="btn btn-outline-light" asp-action="Criar">Criar</a>
        </div>
    </div>

    <div class="card" style="width: 18rem;">
        <div class="card-header" id="fazenda-header">
            Listar Usuários
        </div>
        <div class="card-body" id="fazenda-body">
            <p class="card-text">Listar os usuários do sistema</p>
            <a class="btn btn-outline-light" asp-action="Listar">Listar</a>
        </div>
    </div>

</div>
